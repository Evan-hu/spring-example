<!-- 			<aop:around method="around" pointcut-ref="beanPointcut"></aop:around> -->
			<!-- 也可以直接把pointcut写在里面 -->
			<aop:around method="around" pointcut="execution(* com.babylove.www.spring.aop.demo2.service.BeanServiceImpl.save(String, int))
				and args(name, age)"/>
		</aop:aspect>
	</aop:config>
</beans>
